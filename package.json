{
  "name": "agent-chat-search",
  "version": "1.2.1",
  "description": "Search through chat sessions across multiple AI coding agents (Claude Code, Kimi, Codex, OpenCode)",
  "type": "module",
  "main": "dist/search.js",
  "bin": {
    "agent-search": "./dist/search.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/search.ts",
    "start": "node dist/search.js",
    "search": "tsx src/search.ts",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "vitest run",
    "dev-test": "vitest",
    "ci": "npm run build && npm run check-format && npm run test",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "keywords": [
    "claude",
    "kimi",
    "codex",
    "opencode",
    "ai",
    "agent",
    "search",
    "chat",
    "history",
    "cli",
    "tool"
  ],
  "author": "Uzair Akram <uzair.akram@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Uzair-akrum/agent-chat-search.git"
  },
  "bugs": {
    "url": "https://github.com/Uzair-akrum/agent-chat-search/issues"
  },
  "homepage": "https://github.com/Uzair-akrum/agent-chat-search#readme",
  "dependencies": {
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.0.0",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ]
}
